    public class DotNetDateConverter : JsonConverter<DateTime>
    {
        public override DateTime Read(ref Utf8JsonReader reader, Type typeToConvert, JsonSerializerOptions options)
        {
            string dateString = reader.GetString();

            // Manejar formato /Date(ticks)/
            if (dateString.StartsWith("/Date(", StringComparison.Ordinal) && dateString.EndsWith(")/", StringComparison.Ordinal))
            {
                string ticksStr = dateString.Substring(6, dateString.Length - 8);
                if (long.TryParse(ticksStr, out long ticks))
                {
                    // El timestamp está en milisegundos desde 1970-01-01
                    DateTimeOffset dateTimeOffset = DateTimeOffset.FromUnixTimeMilliseconds(ticks);
                    return dateTimeOffset.LocalDateTime;
                }
            }

            // Si no es formato /Date(...)/, intentar parsear normalmente
            if (DateTime.TryParse(dateString, out DateTime result))
            {
                return result;
            }

            throw new JsonException($"Formato de fecha no reconocido: {dateString}");
        }

        public override void Write(Utf8JsonWriter writer, DateTime value, JsonSerializerOptions options)
        {
            // Opcional: Si necesitas enviar fechas al servidor en el mismo formato
            long ticks = (long)(value - new DateTime(1970, 1, 1)).TotalMilliseconds;
            writer.WriteStringValue($"/Date({ticks})/");
        }
    }
